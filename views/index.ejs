<div id="login">

	<div id="motd">
		<%- include('../motd.html') %>
	</div>
	<form action="/" method="POST">

		<div id="settings">
			<input type="checkbox" id="checkshow">
			<label for="checkshow"></label>
			<div id="settings_options">
				<label>Theme</label>

				<select name="theme" id="themepicker">
					<% locals.config.THEMES.forEach( theme => { %>
					<option <% if (theme == locals.config.DEFAULT_THEME) { %> selected <% } %> name="theme"
						value="<%= theme %>">
						<%= theme %>
					</option>
					<% }) %>
				</select>
				<!-- <label>View</label>
				<select name="theme" id="themepicker">
					<option selected name="theme" value="Comfy">Comfy</option>
					<option selected name="theme" value="Compact">Compact</option>
				</select> -->
			</div>
		</div>

		<div id="loginform">
			<label for="handle">Handle</label>

			<input name="handle" id="handle" required tabindex="1" maxlength="<%= handleMaxlen %>" type="text"
				placeholder="" autocomplete="off" autofocus
				title="Becomes your screen name (Max: <%= handleMaxlen %> characters)" />

			<label for="passcode">Passcode</label>

			<input name="passcode" id="passcode" required tabindex="2" maxlength="<%= passMaxlen %>" type="password"
				autocomplete="off" placeholder=""
				title="Becomes a unique code, type it the same each time (Max: <%= passMaxlen %> characters)" />

			<!-- <input name="room" tabindex="3" maxlength="<%= roomNameMaxlen %>" value="" placeholder="Room (ex: lobby)" /> -->

			<label for="room">Room <small class="subtle">(Double-click for list)</small></label>

			<input name="room" id="room" type="text" maxlength="<%= roomNameMaxlen %>" placeholder='/Hallway'
				list="default_rooms" autocomplete="off" class="combolist" tabindex="3"
				title='The chatroom you will join, typing "/" shows a list (Max: <%= roomNameMaxlen %> characters)'
				<% if(url != ""){ %>value="/<%= url %>" <% } %>>

			<datalist name="room" id="default_rooms">
				<% rooms.forEach( room => { %>
				<option value="/<%= room %>">/<%= room %></option>
				<% }) %>
			</datalist>
			</input>

			<!-- <input type="hidden" name="theme" value="<%= theme %>"> -->

			<input type="submit" tabindex="4" value="Enter chatroom" />
		</div>
	</form>

</div>

<div class="corners">
	<a href="https://github.com/rslay/ZeroChat" style="justify-self: left;">
		<img src="/images/github.svg" alt="github">
		<small><b style="font-size:100%">ZeroChat</b> is Open Source â™¥ Run your own</small>
	</a>
	<div style="justify-self: center;">
		<small style="color:gray;">How does it work? It's <a style="font-size:100%"
				href="https://justhack.in/stateful-http">stateful HTTP</a>.</small>
	</div>
	<div></div>
</div>