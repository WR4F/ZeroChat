<% if (typeof redirect != "undefined") { %>
<form action="<%= redirect %>" method="POST">
	<% } else { %>
	<form action="" method="POST">
		<% } %>
		<div id="settings">
			<input type="checkbox" id="checkshow">
			<label for="checkshow"></label>
			<div id="settings_options">
				<input type="hidden" name="setSettings" value="true">

				<label style="grid-column: span 2;">Theme</label>

				<select name="theme" id="themepicker" style="grid-column: span 2;">
					<% locals.config.themes.forEach( curTheme => { %>
					<option <% if (curTheme == (theme || locals.config.DEFAULT_THEME)) { %> selected <% } %>
						name="theme" value="<%= curTheme %>">
						<%= curTheme %>
					</option>
					<% }) %>
				</select>

				<label style="grid-column: span 2; margin-top: 10px;">Notifications</label>
				<select name="notifications" id="notificationspicker" style="grid-column: span 2; margin-bottom: 10px;">
					<% [['off','Off'],['mentions','Mentions only'],['always','Always']].forEach(notif => { %>
					<option <% if (notifications == notif[0]) { %> selected <% } %> name="notifications" value="<%= notif[0] %>"><%= notif[1] %></option>
					<% }) %>
				</select>

				<label style="grid-column: span 1;">File Previews</label>
				<input type="checkbox" name="inlineView" id="inlineView"
					<% if (typeof inlineView != "undefined" && inlineView) { %> checked <% } %> />
				<label for="inlineView" class="forCheckbox"></label>

				<!-- <label>View</label>
				<select name="theme" id="themepicker">
					<option selected name="theme" value="Comfy">Comfy</option>
					<option selected name="theme" value="Compact">Compact</option>
				</select> -->

				<input type="submit" id="settings-save" value="Apply" style="margin-top: 10px;" />
			</div>

		</div>
	</form>
	<% if (typeof transparentSettings != "undefined") { %>
	
	<style>
		html,
		body {
			background-color: transparent;
		}
	</style>
	<% } %>
